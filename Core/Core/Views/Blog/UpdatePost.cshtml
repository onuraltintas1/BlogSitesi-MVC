@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "title";
    Layout = "WriterLayout";
}
<h1>Blog Düzenleme SAyfası</h1>
<br />
@using (Html.BeginForm("UpdatePost", "Blog", FormMethod.Post))
{
    @Html.Label("blog ID")
    @Html.TextBoxFor(x=>x.BlogID , new {@class="form-control"})
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.Title,new {@class = "form-control"})
    <br />
    @Html.Label("Blog Küçük Görsel")
    @Html.TextBoxFor(x=>x.ThumbnailImage,new {@class = "form-control"})
    <br />
    @Html.Label("Blog Görsel")
    @Html.TextBoxFor(x=>x.Image,new {@class = "form-control"})
    <br />
    @Html.Label("Kategori")
    @Html.TextBoxFor(x=>x.CategoryID , new {@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.Content,15,3,new {@class = "form-control"})
    <br />
    <button class="btn btn-gradient-success">Güncelle</button>
}