@model EntityLayer.Concrete.Blog


@{
    ViewBag.Title = "title";
    Layout = "WriterLayout";
}

<h2>Yeni Blog Girişi</h2>
<br />
@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.Title,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Title)
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.Image,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Image)
    <br />
    @Html.Label("Blog Küçük Görsel")
    @Html.TextBoxFor(x=>x.ThumbnailImage,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.ThumbnailImage)
    <br />
    @Html.Label("Kategori Seçiniz")
    @Html.DropDownListFor(x => x.CategoryID , (List<SelectListItem>) ViewBag.cv, new {@class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.Content,15,3,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Content)
    <button href="/Blog" class="btn btn-dark">Yazıyı Kaydet</button>
}