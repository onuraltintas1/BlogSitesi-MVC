@model System.Collections.Generic.List<EntityLayer.Concrete.Blog>

<div class="row">
  <div class="col-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Son 10 Blog-</h4>
        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th> # </th>
              <th> Başlık </th>
              <th> Kategori </th>
              <th> Tarih </th>
              <th> Detaylar </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
              <tr>
                 <td> @item.BlogID </td>
                <td>
                  <img src="~/writer/assets/images/faces/face1.jpg" class="mr-2" alt="image"> @item.Title
                </td>
                <td>
                  <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                </td>
                <td> @item.Date </td>
                <td> <a href="/Blog/BLogReadAll/@item.BlogID" class="btn btn-dark">Detaylar</a> </td>
                
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
