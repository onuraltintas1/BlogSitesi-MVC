@model System.Collections.Generic.List<EntityLayer.Concrete.Blog>

<div class="tech-btm">
    <h3>Geçmiş Postlar</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.BlogID">
                    <img src=@item.ThumbnailImage class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="single.html">@item.Title</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.Date</span>
                </div>
            </div>

        </div>
    }
</div>